{% extends 'base.html.twig' %}

{% block title %}Halls{% endblock %}

{% block body %}
    <h1>Halls</h1>

    {% if hall is not empty %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hall.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ hall.title }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ hall.address }}</td>
            </tr>
            <tr>
                <th>Createdts</th>
                <td>{{ hall.createdts ? hall.createdts|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedts</th>
                <td>{{ hall.updatedts ? hall.updatedts|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('halls_index') }}">back to list</a>

    <a href="{{ path('halls_edit', {'id': hall.id}) }}">edit</a>

    {{ include('halls/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
